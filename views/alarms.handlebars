<!DOCTYPE html>
<html>
	<head>
		<title>Alarmio</title>
		<meta charset="utf-8">
	  <meta name="viewport" content="width=device-width, initial-scale=1">
	  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
		<link rel="stylesheet" href="css/style.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
	  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>

	</head>

	<body>
		<!--CONNECTION TO NAV BAR-->
		{{> "nav"}}

		<div class="container alarms-page-header">
			<a class="btn btn-lg back-button" href="index.html">&#8249; Back</a>
			<a class="addButton" href="new_alarm.html">+</a>
			<h2 class="links" align="center">Alarms</h2>
		</div>

		{{#each alarms}}
				<div class="container alarms-page" id="{{alarmID}}" style="width: 100%">
					<div class="card-body alarms-box">
						<h3 class="card-title">
							<img class="img-fluid" src="images/alarm.png" alt="Alarm clock icon" style="float:right">{{alarmTime}}</h3>

						<!-- Rounded switch -->
						<label class="switch">
						  <input type="checkbox" checked>
						  <span class="slider round"></span>
						</label>
						<p class="card-text">{{alarmName}}</p>
					</div>
				</div>
		{{/each}}

	</body>
</html>
